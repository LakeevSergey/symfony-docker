FROM php:7.2-fpm

RUN apt-get update -qq \
    && apt-get install -qy --no-install-recommends \
        git \
        zip \
        unzip

RUN curl -sS https://getcomposer.org/installer | php -- \
        --filename=composer \
        --install-dir=/usr/local/bin && \
        echo "alias composer='composer'" >> /root/.bashrc && \
        composer
